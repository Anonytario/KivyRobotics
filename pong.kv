<PongGame>:
    BoxLayout:
        height: dp(70)
        Button:
            text: 'quit'
            on_press: root.quit()
            

        Button:
            text: 'R'
            on_press: root.pressR()
            on_release: root.releaseR()

        Button:
            text: 'L'
            on_press: root.pressL()
            on_release: root.releaseL()

